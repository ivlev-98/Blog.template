extends ../layouts/main.pug
include ../mixins/right-nav.pug
block title
    | Создать пост
block content
    form.create-edit(action="" method="post" enctype="multipart/form-data")
        label(for="title") Название:
        input(type="text" id="title" name="title" placeholder="Заголовок")
        label(for="img" id="imgLabel")
            div.control
                svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="1em" height="1em" fill="currentColor")
                    path(d="M432 256c0 17.69-14.33 32.01-32 32.01H256v144c0 17.69-14.33 31.99-32 31.99s-32-14.3-32-31.99v-144H48c-17.67 0-32-14.32-32-32.01s14.33-31.99 32-31.99H192v-144c0-17.69 14.33-32.01 32-32.01s32 14.32 32 32.01v144h144C417.7 224 432 238.3 432 256z")
                span Обложка
            div.img
            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="1em" height="1em" fill="currentColor")
                    path(d="M432 256c0 17.69-14.33 32.01-32 32.01H256v144c0 17.69-14.33 31.99-32 31.99s-32-14.3-32-31.99v-144H48c-17.67 0-32-14.32-32-32.01s14.33-31.99 32-31.99H192v-144c0-17.69 14.33-32.01 32-32.01s32 14.32 32 32.01v144h144C417.7 224 432 238.3 432 256z")
        input(type="file" name="img" id="img")
        label(for="short_content") Краткое описание:
        textarea.small#short_content
        label(for="content") Контент:
        textarea#content
        label(for="category") Категория:
        select#category
            option(value="1" selected) Автомобили
            option(value="2") Бизнес
            option(value="3") Программирование
            option(value="4") Путешествия
            option(value="5") Истории
        input(type="submit" value="Создать")  
block nav
    +right-nav([
        {title: 'Автомобили', href: "/auto", selected: false},
        {title: 'Путешествия', href: "/trevel", selected: true},
        {title: 'Истории', href: "/story", selected: false},
        {title: 'Программирование', href: "/programming", selected: false},
        {title: 'Бизнес', href: "/business", selected: false},
        {title: 'Кулинария', href: "/cooking", selected: false},
        {title: 'Технологии', href: "/technologies", selected: false}
    ])