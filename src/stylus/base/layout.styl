body
    background $bg-color
    color $text-color
    font-family Roboto
    font-size 18px
a
    text-decoration none
    color $text-color
.wrapper
    position relative
    overflow hidden
    min-height 100vh
.container
    position relative
    margin 30px auto
    max-width 1100px
    transition $transition
    display flex
    right 0
    justify-content center
    gap 30px
    @media(max-width 1115px)
        margin 30px 50px
    @media(max-width 1024px)
        margin 30px
        &.active
            right 252px
    @media(max-width 750px)
        margin 30px 0
#site-overlay, #site-overlay2
    position fixed
    top 0
    z-index 4
    width 100%
    height 100vh
    opacity 0
    background $text-color
    transition $transition
    visibility hidden
    right 0
#site-overlay.active
    opacity .6
    visibility visible
    @media (max-width: 1024px)
        visibility hidden
#site-overlay2.active
    @media (max-width: 1024px)
        right 252px
        opacity .6
        visibility visible
.wrap
    width 100%
.alerts
    position fixed
    bottom 30px
    right 20px
    z-index 3
    display flex
    flex-direction column
    gap 15px
    transition: $transition
    @media(max-width 1024px)
        width 100%
        right 0
        align-items center
.container.active ~ .alerts
    right 252px
.alert
    display flex
    align-items center
    justify-content space-between
    transition $transition
    width 300px
    min-height 50px
    padding-left 30px
    background $primary-color
    position relative
    border-radius 10px
    overflow hidden
    animation jump .2s 3 ease-in 2s
    font-size 16px
    box-shadow 0 0 10px 2px $text-light-color
    @media(max-width 1024px)
        width 60%
    @media(max-width 750px)
        width 85%
    &.danger
        &:before
            content ''
            position absolute
            width 8px
            left 0
            height 100%
            background $danger-color
    &.success
        &:before
            content ''
            position absolute
            width 8px
            left 0
            height 100%
            background $success-color
.alert span
    height 30px
    width 30px
    min-height 30px
    min-width 30px
    display flex
    margin 0 10px
    background $bg-color
    align-items center
    justify-content center
    transition $transition
    cursor pointer
    border-radius: 50%
    &:hover
        background $third-color
.alert svg
    transform rotate(45deg)
@keyframes jump
    0%
        transform translateX(10px)
    50%
        transform translateX(-10px)
    100% 
        transform translateX(0)
