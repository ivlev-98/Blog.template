body
    background $bg-color
    color $text-color
    font-family Roboto
    font-size 18px
a
    text-decoration none
    color $text-color
.wrapper
    position relative
    overflow hidden
    min-height 100vh
.container
    position relative
    margin 30px 150px
    transition $transition
    display flex
    right 0
    justify-content space-between
    @media(max-width 1024px)
        margin 30px 50px
        &.active
            right 252px
    @media(max-width 750px)
        margin 30px 0
#site-overlay, #site-overlay2
    position fixed
    top 0
    z-index 2
    width 100%
    height 100vh
    opacity 0
    background $text-color
    transition $transition
    visibility hidden
    right 0
#site-overlay.active
    opacity .6
    visibility visible
    @media (max-width: 1024px)
        visibility hidden
#site-overlay2.active
    @media (max-width: 1024px)
        right 252px
        opacity .6
        visibility visible
