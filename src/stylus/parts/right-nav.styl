.right-nav
    display flex
    flex-direction column
    background $primary-color
    width $right-nav-width
    border 1px solid $third-color
    border-radius 5px
    padding 5px 0
    transition $transition
    @media (max-width: 1024px)
        border none
        top -85px
        position absolute
        right: -($right-nav-width + 50px)
    @media (max-width: 750px)
        right: -($right-nav-width)
.right-nav a
    height 45px
    display flex
    align-items center
    padding-left 20px
    color $right-nav-color
    font-size 14px
    transition $transition
    &:hover
        background $right-nav-hover-bg
    &.selected
        background $right-nav-hover-bg
        color $text-color
        border-left 3px solid $secondary-color
        padding-left 10px
