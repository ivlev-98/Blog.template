.right-nav
    display flex
    flex-direction column
    background $primary-color
    width $right-nav-width
    min-width $right-nav-width
    border 1px solid $third-color
    border-radius 5px
    padding 5px 0
    transition $transition
    height: min-content
    @media (max-width: 1024px)
        border none
        top -85px
        position absolute
        right: -($right-nav-width + 30px)
        padding-top: 0
    @media (max-width: 750px)
        right: -($right-nav-width)
.right-nav a
    height 45px
    display flex
    align-items center
    padding-left 20px
    color $right-nav-color
    font-size 14px
    transition $transition
    &:hover
        background $right-nav-hover-bg
    &.selected
        background $right-nav-hover-bg
        color $text-color
        border-left 3px solid $secondary-color
        padding-left 10px
.right-nav__header
    display none
    background $secondary-color
    color $third-color
    padding 20px 0 20px 15px
    font-size 14px
    @media(max-width: 1024px)
        display flex
        flex-direction column
.right-nav__header img
    width 50px
    height 50px
    border-radius 50%
    margin 10px 0
.right-nav__mobile-links
    display none
    @media(max-width: 1024px)
        display flex
        flex-direction column
.right-nav hr
    border 1px solid $bg-color
    border-radius 3px
    width 85%
    margin 5px auto
