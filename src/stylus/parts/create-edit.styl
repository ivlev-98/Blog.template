.create-edit
    background $primary-color
    display flex
    width 100%
    margin 0 auto
    border-radius 5px
    border 1px solid $third-color
    padding 50px
    box-sizing border-box
    justify-content center
    flex-direction column
    @media(max-width 1024px)
        padding 40px
    @media(max-width 750px)
        padding 30px
.create-edit input[type="file"]
    display none
.create-edit input[type="text"],
.create-edit textarea,
.create-edit select
    height 40px
    border 1px solid $third-color
    border-radius 10px
    margin 10px 0
    color $text-color
    padding 0 10px
    font-size 16px
    &::placeholder
        color $text-light-color
    &:focus
        outline 3px solid $third-color
.create-edit select
    background $primary-color
    outline 1px solid $third-color
.create-edit textarea
    resize none
    height 330px
    padding 10px
.create-edit input[type="submit"]
    background $secondary-color
    border none
    color $primary-color
    height 45px
    display flex
    align-items center
    justify-content center
    border-radius 10px
    margin-top 25px
    transition $transition
    cursor pointer
    &:hover
        background $secondary-color-dark
#imgLabel
    position relative
    height 200px
    outline 2px dotted $third-color
    border-radius 10px
    cursor pointer
    overflow hidden
    margin 10px 0 15px 0
#imgLabel > div.img
    position absolute
    width 100%
    z-index 2
    top 0
#imgLabel > div.control
    position relative
    height 200px
    z-index 1
    display flex
    align-items center
    justify-content flex-end
    flex-direction column
    color $text-light-color
    transition $transition
    &:hover
        color $text-color
#imgLabel svg
    font-size 2.5em
#imgLabel span
    margin 30px 0 45px 0
#imgLabel img
    width 100%
    height 200px
    object-fit cover
#imgLabel > svg
    position absolute
    z-index 3
    top 0
    right 0
    padding 10px
    font-size 1.5em
    color $primary-color
    transform rotate(45deg)
    transition $transition
    &:hover
        font-size 2em
        padding 5px