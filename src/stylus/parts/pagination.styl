.pagination
    display flex
    width 100%
    align-items center
    justify-content center
    gap 10px
    margin-top 30px
    overflow hidden
.pagination__link
    display flex
    align-items center
    justify-content center
    background $primary-color
    border 1px solid $third-color
    border-radius 50%
    width 30px
    height 30px
    min-width 30px
    min-height 30px
    font-size 14px
    transition $transition
    &:hover, &.selected
        background $secondary-color
        border 1px solid $secondary-color
        color $third-color
    &.disabled
        pointer-events none
        color $text-light-color
        background $pagination-link-disabled