.post
    display flex
    flex-direction column
    background $primary-color
    border-radius 5px
    margin-bottom 20px
.post a, .post span
    padding 10px 20px
    @media (max-width: 750px)
        padding 5px 10px
.post img
    width 100%
    height 400px
    object-fit cover
.post p
    line-height 1.8em
.post__controls
    display flex
    align-items center
    justify-content space-between
    padding 15px 20px
    @media (max-width: 750px)
        padding 15px 10px
.post__controls > div
    display flex
    gap 30px
    @media(max-width: 750px)
        gap 10px
.post__controls svg
    font-size 1.35em
.post__controls form
    display flex
    align-items center
.post__controls span, .post__controls a, .post__controls button
    display flex
    align-items center
    gap 5px
    color $text-light-color
    font-size 16px
    @media(max-width: 750px)
        font-size 14px
.post__controls button
    border none
    background none
    cursor pointer
.post__controls span.action
    cursor pointer
.post__controls span
    padding 0
.post__controls a, .post__controls span.action, .post__controls button
    transition $transition
    padding 0
    &:hover
        color: $secondary-color
    &.danger:hover
        color $danger-color
    &.selected
        color $secondary-color
#comments
    display flex
    flex-direction column
    border-radius 5px
    background $primary-color
.post__comments-form
    display flex
    flex-direction column
    padding 30px
    border-radius 5px
    @media(max-width: 750px)
        padding 30px 10px
.post__comments-form h4
    margin-top 0
    margin-bottom 25px
    font-size 1.2em
.post__comments-form textarea
    width 100%
    height 130px
    resize none
    border 1px solid $third-color
    box-sizing border-box
    border-radius 5px
    padding 20px
    margin-bottom 25px
    color $text-color
    &:focus
        outline none
.post__comments-form input[type=submit]
    background $secondary-color
    color $primary-color
    border none
    border-radius 5px
    height 45px
    display flex
    align-items center
    padding 0 20px
    transition $transition
    cursor pointer
    &:hover
        background $secondary-color-dark
.post__comments-form > div
    display flex
    justify-content flex-end
.post__comments-list
    display flex
    flex-direction column
    padding 30px
    gap 20px
    @media(max-width: 750px)
        padding 30px 10px
