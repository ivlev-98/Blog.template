.auth-reg
    background $primary-color
    display flex
    width 100%
    margin 0 auto
    border-radius 5px
    border 1px solid $third-color
    padding 50px
    box-sizing border-box
    justify-content center
    flex-direction column
    @media(max-width 1024px)
        padding 40px
    @media(max-width 750px)
        padding 30px
.auth-reg input[type="text"],
.auth-reg input[type="email"],
.auth-reg input[type="tel"],
.auth-reg input[type="number"],
.auth-reg input[type="password"]
    height 40px
    border 1px solid $third-color
    border-radius 10px
    margin 10px 0
    color $text-color
    padding 0 10px
    font-size 16px
    &::placeholder
        color $text-light-color
    &:focus
        outline 3px solid $third-color
.auth-reg input[type="submit"]
    background $secondary-color
    border none
    color $primary-color
    height 45px
    display flex
    align-items center
    justify-content center
    border-radius 10px
    margin-top 25px
    transition $transition
    cursor pointer
    &:hover
        background $secondary-color-dark