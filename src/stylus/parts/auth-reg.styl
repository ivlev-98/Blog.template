.auth-reg
    background $primary-color
    display flex
    width 100%
    margin 0 auto
    border-radius 5px
    border 1px solid $third-color
    padding 50px
    box-sizing border-box
    justify-content center
    flex-direction column
    @media(max-width 1024px)
        padding 40px
    @media(max-width 750px)
        padding 30px
.auth-reg input[type="text"],
.auth-reg input[type="email"],
.auth-reg input[type="tel"],
.auth-reg input[type="number"],
.auth-reg input[type="password"]
    height 40px
    border 1px solid $third-color
    border-radius 10px
    margin 10px 0
    color $text-color
    padding 0 10px
    font-size 16px
    &::placeholder
        color $text-light-color
    &:focus
        outline 3px solid $third-color
    &.error
        outline 3px solid $danger-color
.auth-reg input[type="submit"]
    background $secondary-color
    border none
    color $primary-color
    height 45px
    display flex
    align-items center
    justify-content center
    border-radius 10px
    margin-top 25px
    transition $transition
    cursor pointer
    &:hover
        background $secondary-color-dark
.auth-reg span
    margin 5px 0
.auth-reg span > span
    margin-left 10px
    margin-bottom 10px
    display flex
    flex-direction column
.auth-reg input[type=checkbox], .auth-reg input[type=radio]
    display none
    &+label
        display inline-flex
        align-items center
        user-select none
        &::before
            content ''
            transition $transition
            margin-right 10px
            display inline-block
            width 20px
            height 20px
            border 1px solid $third-color
            border-radius 50%
            background-repeat no-repeat
            background-position center center
            background-size 50% 50%
.auth-reg input[type=checkbox]:checked, .auth-reg input[type=radio]:checked
    &+label::before
        border 1px solid $secondary-color
        background-color $secondary-color
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3e%3c/svg%3e");