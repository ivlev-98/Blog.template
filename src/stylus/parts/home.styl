.home
    display flex
    gap 20px
    @media(max-width: 750px)
        flex-direction column
.home__avatar
    margin 0
    padding 10px
    background $primary-color
    border-radius 5px
    border 1px solid $third-color
    display flex
    flex-direction column
    align-items center
    @media(max-width: 750px)
        align-items flex-start
.home__avatar figcaption
    margin-top 10px
    @media(max-width: 750px)
        margin-left 15px
.home__avatar img
    object-fit cover
    width 220px
    height 220px
    @media(max-width: 750px)
        width 100%
.home__stat
    gap 20px
    display flex
    width 100%
    flex-direction column
.home__row
    display flex
    background $primary-color
    border-radius 5px
    border 1px solid $third-color
    padding 15px
    gap 30px
.home__col
    display flex
    flex-direction column
    gap 20px
.home__col-small
    gap 3px
    font-size 14px
    align-items center
.home__green
    color $secondary-color
.home__count
    font-size 20px
    font-weight 600